<h1>Brand</h1>
<div class="well">
  <%= link_to "New Brand", new_brand_path, class: "btn btn-primary" %>
</div>

<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>lName</th>
      <th>qTy</th>
    </tr>
  </thead>
  <tbody>
    <% if @brand.size == 0 %>
      <tr>
        <td colspan="6">No people found.</td>
      </tr>
    <% else %>
      <% @brand.each do |brand| %>
        <tr>
          <td><%= brand.name %></td>
          <td><%= brand.lName %></td>
          <td><%= brand.qTy %></td>
          <td>
            <%= link_to "Edit", edit_brand_path(brand), class: "btn btn-default" %>
          </td>
          <td>
            <%= button_to "Delete", brand, method: :delete, data: { confirm: "Are you sure you wish to delete #{brand.name} #{brand.lName}?" }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>