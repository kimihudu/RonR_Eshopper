<%= render 'share/ads'%>
<!--form-->
    <div class="container">
        <div class="row">
          <!--sign up form-->
          <% @page_title = "UserAuth | Signup" %>
              <div class="col-sm-4">
                  <div class="signup-form">

                      <h2>Sign up</h2>

                      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),:defaults => {:input_html => {:label => false}}) do |f| %>
                          <!--<%= f.error_notification %>-->
                          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

                              <div class="form-inputs">
                                  <%= f.input_field :username, required: true, autofocus: true, :placeholder => 'User Name' %>
                                      <%= f.input_field :email, required: true, autofocus: true, :placeholder => 'Email' %>
                                          <%= f.input_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), :placeholder => 'Password' %>
                                              <%= f.input_field :password_confirmation, required: true, :placeholder => 'confirm Password' %>
                              </div>

                              <div class="form-actions">
                              <div class='col col-sm-5 pull-left '><%= render "users/shared/links" %></div>
                              <div class='col col-sm-7 pull-right'><%= f.button :submit, "Sign up", :class => 'btn-primary',style: 'color: white' %></div>



                              </div>
                      <% end %>

                  </div>
              </div>

              <div class="col-sm-1">
                <h2 class='or'><i class='fa fa-info fa-2x'></i></h2>
              </div>

              <div class='col-sm-4'>
                    <div class='signup-form'>
                        <% if @user.errors.any? %>
                            <ul class="Signup_Errors align-bottom">
                            <% for message_error in @user.errors.full_messages %>
                            <li><p>* <%= message_error %></p></li>
                            <% end %>
                            </ul>
                        <% end %>
                    </div>

              </div>
            <!--/sign up form-->
        </div>
    </div>
<!--/form-->