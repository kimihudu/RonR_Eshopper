
<%= render 'share/ads'%>
<!--form-->
    <div class="container">
        <div class="row">
          <!--sign up form-->
          <% @page_title = "UserAuth | Login" %>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="login-form col-md-5">
                <h2>Log in</h2>
                <%= f.input_field :email, required: false, autofocus: true, :placeholder => 'Email', :class => 'form-control' %>
                <%= f.input_field :password, required: false, :placeholder => 'Password', :class => 'form-control' %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?  %>
              </div>

              <div class="form-actions col-md-3 login-form">
                <%= f.button :submit, "Log in", :class => 'btn-primary', :style => 'margin-top: 50px' %>
                <br>
                <br>
              <div><%= render "users/shared/links" %></div>
              </div>
            <% end %>


        </div>
    </div>

