<h1><p>Edit Category</p></h1>
<table class="table-borderless" style="height:200px; width: 400px">

    <%= simple_form_for(@category,:method => :PATCH,:url => admin_category_path,
                                    html: {class: 'form-horizontal'},:defaults => {:input_html => {:class => 'form-control'}}) do|f|%>

    <tr>
        <td> <%= f.input :name, :label => 'Category Name' %></td>
    </tr>

    <tr>
        <td> <%= f.input :sub_cat, :label => 'Sub Category Name'%></td>
    </tr>

    <tr>
        <td>
            <%= f.input :status,:label => 'Status', :collection => ['Enable','Disable'], :selected => @category.status == "Enable"? "Enable" : "Disbale" %>
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <br>
            <%= f.button :submit, class: 'btn btn-success pull-right'%>
        </td>
    </tr>
    <input type="hidden" name="_token" value="{{ csrf_token() }}">
    <% end %>
</table>